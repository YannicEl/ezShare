{
	"firestore": {
		"rules": "firestore.rules",
		"indexes": "firestore.indexes.json"
	},
	"hosting": {
		"public": "frontend/dist",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"rewrites": [
			{
				"source": "**",
				"destination": "/index.html"
			}
		]
	},
	"functions": {
		"predeploy": [],
		"postdeploy": [],
		"ignore": ["node_modules"],
		"source": "backend",
		"runtime": "nodejs16"
	},
	"storage": {
		"rules": "storage.rules"
	}
}
