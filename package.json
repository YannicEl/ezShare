{
	"name": "ez-share",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"packageManager": "pnpm@9.8.0",
	"engines": {
		"node": "20",
		"pnpm": "9"
	},
	"scripts": {
		"dev": "vite dev --port 3000",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "pnpm run test:integration && pnpm run test:unit",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"lint": "prettier --check .",
		"format": "prettier --write .",
		"deploy:dev": "pnpm build && wrangler pages deploy --branch dev",
		"deploy:prod": "pnpm build && wrangler pages deploy --branch main",
		"cf-typegen": "wrangler types --env preview  && move worker-configuration.d.ts src/",
		"studio:local": "drizzle-kit studio",
		"studio:dev": "drizzle-kit studio -- --dev",
		"studio:prod": "drizzle-kit studio -- --prod",
		"db:push": "drizzle-kit push",
		"migrations:generate": "drizzle-kit generate",
		"migrations:run:local": "drizzle-kit migrate",
		"migrations:run:dev": "drizzle-kit migrate -- --dev",
		"migrations:run:prod": "drizzle-kit migrate -- --prod"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "4.20240821.1",
		"@playwright/test": "1.46.1",
		"@sveltejs/adapter-cloudflare": "4.7.2",
		"@sveltejs/kit": "2.5.24",
		"@sveltejs/vite-plugin-svelte": "4.0.2",
		"better-sqlite3": "11.2.1",
		"dotenv": "16.4.5",
		"drizzle-kit": "0.24.1",
		"prettier": "3.3.3",
		"prettier-plugin-organize-imports": "4.0.0",
		"prettier-plugin-svelte": "3.2.6",
		"prettier-plugin-tailwindcss": "0.6.6",
		"svelte": "5.0.0-next.235",
		"svelte-check": "3.8.6",
		"tslib": "2.6.3",
		"typescript": "5.5.4",
		"unocss": "0.62.2",
		"vite": "5.4.2",
		"vitest": "2.0.5",
		"wrangler": "3.72.2"
	},
	"dependencies": {
		"@unocss/reset": "0.62.2",
		"dayjs": "1.11.13",
		"drizzle-orm": "0.33.0",
		"zod": "3.23.8"
	}
}
