{
	"name": "ez-share",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"packageManager": "pnpm@10.11.0",
	"engines": {
		"node": "22",
		"pnpm": "10"
	},
	"scripts": {
		"dev": "vite dev --port 3000",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "pnpm run test:integration && pnpm run test:unit",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"lint": "prettier --check .",
		"format": "prettier --write .",
		"deploy:dev": "pnpm build && wrangler pages deploy --branch dev",
		"deploy:prod": "pnpm build && wrangler pages deploy --branch main",
		"cf-typegen": "wrangler types --env preview  && move worker-configuration.d.ts src/",
		"studio:local": "drizzle-kit studio",
		"studio:dev": "drizzle-kit studio -- --dev",
		"studio:prod": "drizzle-kit studio -- --prod",
		"db:push": "drizzle-kit push",
		"migrations:generate": "drizzle-kit generate",
		"migrations:run:local": "drizzle-kit migrate",
		"migrations:run:dev": "drizzle-kit migrate -- --dev",
		"migrations:run:prod": "drizzle-kit migrate -- --prod",
		"prepare": "svelte-kit sync"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "4.20250525.0",
		"@playwright/test": "1.52.0",
		"@sveltejs/adapter-cloudflare": "4.9.0",
		"@sveltejs/kit": "2.21.1",
		"@sveltejs/vite-plugin-svelte": "3.1.2",
		"better-sqlite3": "11.10.0",
		"dotenv": "16.5.0",
		"drizzle-kit": "0.31.1",
		"prettier": "3.5.3",
		"prettier-plugin-organize-imports": "4.1.0",
		"prettier-plugin-svelte": "3.4.0",
		"prettier-plugin-tailwindcss": "0.6.11",
		"svelte": "5.33.1",
		"svelte-check": "3.8.6",
		"tslib": "2.8.1",
		"typescript": "5.8.3",
		"unocss": "0.65.4",
		"vite": "5.4.19",
		"vitest": "2.1.9",
		"wrangler": "3.114.9"
	},
	"dependencies": {
		"@unocss/reset": "0.65.4",
		"dayjs": "1.11.13",
		"drizzle-orm": "0.43.1",
		"zod": "3.25.28"
	}
}
